@model IEnumerable<ASP.NET_MVC.Models.DanhSachPhongChieu>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Danh sách phòng chiếu</h2>

<p>
    @Html.ActionLink("Thêm mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Tên phòng
        </th>
        <th>
            Số lượng ghế
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TenPhongChieu)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SoLuongGhe)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id=item.PhongChieuId }) |
            @Html.ActionLink("Chi tiết", "Details", new { id=item.PhongChieuId }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.PhongChieuId })
        </td>
    </tr>
}

</table>
