@model IEnumerable<ASP.NET_MVC.Models.LichChieuPhim>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Lịch chiếu phim</h2>

<p>
    @Html.ActionLink("Thêm mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Tên phim
        </th>
        <th>
            Tên phòng chiếu
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DanhSachPhim.TenPhim)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DanhSachPhongChieu.TenPhongChieu)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id=item.LichChieuId }) |
            @Html.ActionLink("Chi tiết", "Details", new { id=item.LichChieuId }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.LichChieuId })
        </td>
    </tr>
}

</table>
