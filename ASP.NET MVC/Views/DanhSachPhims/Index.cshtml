@model IEnumerable<ASP.NET_MVC.Models.DanhSachPhim>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Danh sách phim</h2>

<p>
    @Html.ActionLink("Thêm phim mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Tên phim
        </th>
        <th>
            Đạo diễn
        </th>
        <th>
            Thời lượng
        </th>
        <th>
            Xuất xứ
        </th>
        <th>
            Nội dung
        </th>
        <th>
            Ảnh đại diện
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TenPhim)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DaoDien)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ThoiLuong)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.XuatXu)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NoiDung)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FilePath)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id=item.PhimId }) |
            @Html.ActionLink("Chi tiết", "Details", new { id=item.PhimId }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.PhimId })
        </td>
    </tr>
}

</table>
